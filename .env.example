# Statsarr Configuration

# Server
PORT=7474
NODE_ENV=development

# Database (SQLite path)
DATABASE_PATH=./data/statsarr.db

# Radarr
RADARR_URL=http://localhost:7878
RADARR_API_KEY=your-radarr-api-key

# Sonarr
SONARR_URL=http://localhost:8989
SONARR_API_KEY=your-sonarr-api-key

# Bazarr
BAZARR_URL=http://localhost:6767
BAZARR_API_KEY=your-bazarr-api-key

# Prowlarr
PROWLARR_URL=http://localhost:9696
PROWLARR_API_KEY=your-prowlarr-api-key

# Jellyseerr
JELLYSEERR_URL=http://localhost:5055
JELLYSEERR_API_KEY=your-jellyseerr-api-key

# Emby (optional - use either Emby or Jellyfin)
EMBY_URL=http://localhost:8096
EMBY_API_KEY=your-emby-api-key

# Jellyfin (optional - use either Emby or Jellyfin)
JELLYFIN_URL=http://localhost:8096
JELLYFIN_API_KEY=your-jellyfin-api-key

# Polling intervals (in minutes)
POLL_INTERVAL_HISTORY=5
POLL_INTERVAL_METADATA=30
POLL_INTERVAL_PLAYBACK=1

# Historical import (months)
HISTORY_IMPORT_MONTHS=12
