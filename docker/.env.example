# Statsarr Docker Environment Configuration
# Copy this file to .env and update with your values

# Radarr
RADARR_URL=http://radarr:7878
RADARR_API_KEY=your-radarr-api-key

# Sonarr
SONARR_URL=http://sonarr:8989
SONARR_API_KEY=your-sonarr-api-key

# Bazarr
BAZARR_URL=http://bazarr:6767
BAZARR_API_KEY=your-bazarr-api-key

# Prowlarr
PROWLARR_URL=http://prowlarr:9696
PROWLARR_API_KEY=your-prowlarr-api-key

# Jellyseerr
JELLYSEERR_URL=http://jellyseerr:5055
JELLYSEERR_API_KEY=your-jellyseerr-api-key

# Emby (use either Emby or Jellyfin)
EMBY_URL=http://emby:8096
EMBY_API_KEY=your-emby-api-key

# Jellyfin (use either Emby or Jellyfin)
# JELLYFIN_URL=http://jellyfin:8096
# JELLYFIN_API_KEY=your-jellyfin-api-key

# Polling intervals (in minutes)
POLL_INTERVAL_HISTORY=5
POLL_INTERVAL_METADATA=30
POLL_INTERVAL_PLAYBACK=1

# Historical import (months of history to import)
HISTORY_IMPORT_MONTHS=12
